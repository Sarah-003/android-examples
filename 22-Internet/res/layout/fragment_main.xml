<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    tools:context="es.curso.android.internet.MainActivity$PlaceholderFragment" >

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"        
        >
	    <Button 
	        android:id="@+id/btWifiSettings"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/bt_wifi_settings"
        	/>
	    <Button 
	        android:id="@+id/btMobileSettings"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/bt_mobile_settings"
        	/>

	</LinearLayout>
	
    
    <View
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#000000" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"        
        >
	    <Button 
	        android:id="@+id/btDwonloadFile"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/bt_download_file"
        	/>
	    <Button 
	        android:id="@+id/btDwonloadFileAsyncTask"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/bt_download_file_asyntTask"
        	/>
	    
	    <ScrollView 
	        android:layout_width="match_parent"
        	android:layout_height="100dip">
		    <TextView
		        android:id="@+id/tvJSON"
		        android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:scrollbars="vertical"
		    />
	    </ScrollView>	    	    
	    
	</LinearLayout>
	
    <ImageView 
	        android:layout_gravity="center"
	        android:id="@+id/ivPhoto"
	        android:layout_width="200dip"
	        android:layout_height="200dip"
	        />
    
</LinearLayout>
